<?xml version="1.0" encoding="UTF-8"?>

<!-- Markup for the ScannerGUI -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
      <tabs>
          <!-- The easy tab -->
          <Tab text="Easy">
              <content>
                  <AnchorPane minHeight="500.0" minWidth="600.0">
                      <children>
                          <!-- Label for the project name "Project Name:" -->
                          <Label layoutX="14.0" layoutY="14.0" text="Project Name:" />
                          <!-- Text input of the project name -->
                          <TextField fx:id="easyProjectName" layoutX="108.0" layoutY="9.0" />
                          <!-- File browser button, "Download Location" -->
                          <Button fx:id="easyFileBrowser" layoutX="14.0" layoutY="61.0" mnemonicParsing="false" text="Download Location" />
                          <!-- Label for the pathways label "File Path:" -->
                          <Label layoutX="160.0" layoutY="67.0" text="File Path:" />
                          <!-- Pathway label -->
                          <Label fx:id="easyFilePath" layoutX="235.0" layoutY="67.0" />
                          <!-- Button for creating and downloading pdfs -->
                          <Button fx:id="easyCreate" layoutX="164.0" layoutY="113.0" mnemonicParsing="false" prefHeight="186.0" prefWidth="273.0" text="Download and Create PDF" textAlignment="CENTER" wrapText="true">
                              <Font size="18.0" />
                          </Button>
                          <!-- Log for the easy tab -->
                          <TextArea fx:id="easyLog" editable="false" layoutX="62.0" layoutY="319.0" prefHeight="122.0" prefWidth="476.0" />
                      </children>
                  </AnchorPane>
              </content>
          </Tab>
          <!-- The "Normal" tab -->
          <Tab text="Normal">
              <content>
                  <AnchorPane>
                      <children>
                          <!-- Button for File browser -->
                          <Button fx:id="normalFileBrowser" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="File Browser" />
                          <!-- Label for file path "File Path:" -->
                          <Label layoutX="115.0" layoutY="16.0" text="File Path:" />
                          <!-- File path text -->
                          <Label fx:id="normalFilePath" layoutX="171.0" layoutY="16.0" />
                          <!-- Label for color mode -->
                          <Label layoutX="14.0" layoutY="88.0" text="Color Mode:" />
                          <!-- Choice box for color mode -->
                          <ChoiceBox fx:id="mediumColorMode" layoutX="97.0" layoutY="83.0" />
                          <!-- Check box determining OCR -->
                          <CheckBox layoutX="14.0" layoutY="127.0" mnemonicParsing="false" selected="true" text="OCR (uncheck to speed up)" />
                          <!-- Checkbox for txt output -->
                          <CheckBox layoutX="14.0" layoutY="152.0" mnemonicParsing="false" text="Create .txt output" />
                          <!-- Button to begin PDF generation -->
                          <Button fx:id="mediumCreatePDF" layoutX="14.0" layoutY="193.0" mnemonicParsing="false" prefHeight="57.0" prefWidth="216.0" text="Download and Create PDF" />
                          <!-- text log for the normal tab -->
                          <TextArea fx:id="normalLog" editable="false" layoutX="62.0" layoutY="325.0" prefHeight="122.0" prefWidth="476.0" />
                      </children>
                  </AnchorPane>
              </content>
          </Tab>
          <!-- Expert tab -->
          <Tab closable="false" text="Expert">
              <content>
                  <AnchorPane prefHeight="446.0" prefWidth="518.0">
                      <children>
                          <!-- Button for file browser on hard tab -->
                          <Button fx:id="hardFileBrowser" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="File Browser" />
                          <!-- Label for the file path -->
                          <Label layoutX="115.0" layoutY="16.0" text="File Path:" />
                          <!-- Text of file path -->
                          <Label fx:id="hardFilePath" layoutX="171.0" layoutY="16.0" />
                          <!-- Line splitting first and second sections -->
                          <Line endX="500.0" layoutX="102.0" layoutY="51.0" startX="-100.0" />
                          <!-- Label for scanner options -->
                          <Label layoutX="15.0" layoutY="66.0" text="Scanner:" />
                          <!-- Button to download from camera to directory -->
                          <Button fx:id="hardImport" layoutX="10.0" layoutY="93.0" mnemonicParsing="false" text="Download Images from Cameras" />
                          <!-- Button to delete images from camera -->
                          <Button fx:id="hardDelete" layoutX="257.0" layoutY="93.0" mnemonicParsing="false" text="Delete Images from Cameras" />
                          <!-- Line splitting second and third sections -->
                          <Line endX="500.0" layoutX="106.0" layoutY="139.0" startX="-100.0" />
                          <!-- Label for image processing options -->
                          <Label layoutX="13.0" layoutY="165.0" text="Image Processing:" />
                          <!-- Label for layout options -->
                          <Label layoutX="14.0" layoutY="197.0" prefHeight="27.0" prefWidth="99.0" text="Layout Option:" />
                          <!-- Layout options -->
                          <ChoiceBox fx:id="hardLayoutOption" layoutX="113.0" layoutY="197.0" />
                          <!-- Lebel for orientation options -->
                          <Label layoutX="14.0" layoutY="224.0" prefHeight="27.0" prefWidth="99.0" text="Orientation:" />
                          <!-- orientation options -->
                          <ChoiceBox fx:id="hardOrientation" layoutX="113.0" layoutY="224.0" />
                          <!-- Label for margins -->
                          <Label layoutX="14.0" layoutY="251.0" prefHeight="27.0" prefWidth="99.0" text="Margins" />
                          <!-- Margins options -->
                          <Spinner fx:id="hardMargins" editable="true" layoutX="113.0" layoutY="251.0" prefHeight="27.0" prefWidth="150.0" />
                          <!-- label for color mode options -->
                          <Label layoutX="14.0" layoutY="278.0" prefHeight="27.0" prefWidth="99.0" text="Color Mode:" />
                          <!-- color mode options -->
                          <ChoiceBox fx:id="hardColorMode" layoutX="113.0" layoutY="278.0" />
                          <!-- Button for processing; right side of GUI -->
                          <Button fx:id="hardScan" layoutX="380.0" layoutY="200.0" mnemonicParsing="false" prefHeight="80.0" prefWidth="175.0" text="Process" />
                          <!-- Button to open for manual editing -->
                          <Button fx:id="hardRunScanTailor" layoutX="380.0" layoutY="280.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="174.0" text="Open for Manual Editing" />
                          <!-- Line splitting third and fourth -->
                          <Line endX="500.0" layoutX="106.0" layoutY="335.0" startX="-100.0" />
                          <!-- Label for PDF output options -->
                          <Label layoutX="14.0" layoutY="344.0" text="PDF Output:" />
                          <!-- option to run OCR -->
                          <CheckBox layoutX="17.0" layoutY="374.0" mnemonicParsing="false" selected="true" text="Run OCR (uncheck to speed up)" />
                          <!-- option to output to txt file -->
                          <CheckBox layoutX="17.0" layoutY="395.0" mnemonicParsing="false" text="Create .txt file" />
                          <!-- PDF generation button; hard tab -->
                          <Button fx:id="hardCreatePDF" layoutX="380.0" layoutY="361.0" mnemonicParsing="false" prefHeight="67.0" prefWidth="133.0" text="Create PDF" />
                      </children>
                  </AnchorPane>
              </content>
          </Tab>
      </tabs>
  </TabPane>
